{
  "name": "notion-sync",
  "version": "1.0.0",
  "description": "GitHub Action to sync markdown documents to Notion",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "package": "ncc build dist/index.js -o dist",
    "all": "npm run build && npm run test && npm run package"
  },
  "keywords": ["github-actions", "notion", "markdown", "sync"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@notionhq/client": "^2.2.14",
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "gray-matter": "^4.0.3",
    "remark": "^15.0.1",
    "remark-parse": "^11.0.0",
    "js-yaml": "^4.1.0",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "@vercel/ncc": "^0.38.1"
  }
}